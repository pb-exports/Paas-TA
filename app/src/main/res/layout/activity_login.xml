<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg_login"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:drawableLeft="@drawable/appicon"
        android:drawablePadding="30dp"
        android:fontFamily="@font/bold"
        android:includeFontPadding="false"
        android:text="편지"
        android:textColor="@color/main_navy"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/solid_white_stroke"
        android:elevation="15dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_logo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/bold"
            android:includeFontPadding="false"
            android:paddingVertical="20dp"
            android:text="Login"
            android:textColor="@color/main_navy"
            android:textSize="38sp" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:background="@drawable/solid_gray_button"
            android:fontFamily="@font/regular"
            android:hint="Email"
            android:includeFontPadding="false"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:textAllCaps="false"
            android:textColor="@color/main_navy"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:background="@drawable/solid_gray_button"
            android:fontFamily="@font/regular"
            android:hint="Password"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textAllCaps="false"
            android:textColor="@color/main_navy"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_login"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:background="@drawable/solid_navy_button"
            android:fontFamily="@font/regular"
            android:includeFontPadding="false"
            android:text="Sign in"
            android:textAllCaps="false"
            android:textColor="@color/sub_white"
            android:textSize="18sp"
            android:onClick="Signin"/>

        <Button
            android:id="@+id/bt_forgetPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#00000000"
            android:fontFamily="@font/regular"
            android:includeFontPadding="false"
            android:text="forget password?"
            android:textAllCaps="false"
            android:textColor="@color/main_navy"
            android:textSize="13sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/regular"
        android:includeFontPadding="false"
        android:text="Can't have an account?"
        android:textAllCaps="false"
        android:textColor="@color/main_navy"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:background="#00000000"
        android:fontFamily="@font/bold"
        android:includeFontPadding="false"
        android:insetTop="0sp"
        android:insetBottom="0sp"
        android:onClick="Signup"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="@color/point_orange"
        android:textSize="18sp"
        app:iconPadding="0sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/regular"
        android:includeFontPadding="false"
        android:text="MuckMul"
        android:textColor="@color/sub_gray"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>